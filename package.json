{
  "name": "@samouraiwallet/bip47",
  "version": "0.7.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "description": "A set of utilities for working with BIP47 and bitcoinjs-lib",
  "keywords": [
    "bitcoin",
    "bitcoinjs",
    "bitcoinjs-lib",
    "bip47",
    "bip-47",
    "paynym"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ test/",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.json",
    "build": "npm run build:clean && npm run build:esm",
    "prepack": "npm run lint && npm run typescript && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://code.samourai.io/dojo/bip47-js.git"
  },
  "bugs": {
    "url": "https://code.samourai.io/dojo/bip47-js/-/issues"
  },
  "author": "Katana Cryptographic Ltd.",
  "license": "LGPL-3.0",
  "homepage": "https://code.samourai.io/dojo/bip47-js",
  "dependencies": {
    "bech32": "2.0.0",
    "bip32": "3.1.0",
    "bs58check": "2.1.2",
    "create-hash": "1.2.0"
  },
  "devDependencies": {
    "@types/bs58check": "^2.1.0",
    "@types/create-hash": "^1.2.2",
    "@types/node": "^16.18.6",
    "@types/tiny-secp256k1": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "@vitest/coverage-c8": "^0.25.5",
    "eslint": "^8.29.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^45.0.1",
    "tiny-secp256k1": "^2.2.1",
    "typescript": "^4.9.4",
    "vitest": "^0.25.5"
  }
}
